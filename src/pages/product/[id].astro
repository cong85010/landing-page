---
import { showcases, defaultProduct } from "../../data/showcases";
import type { Product, ProductSpec } from "../../types";
import Layout from "../../layouts/Layout.astro";
import Icon from "../../components/ui/Icon.astro";
import Badge from "../../components/ui/Badge.astro";
import StarRating from "../../components/ui/StarRating.astro";
import SectionHeader from "../../components/ui/SectionHeader.astro";
import { truncateText } from "../../utils";

export function getStaticPaths() {
  return showcases.map((item) => ({
    params: { id: item.id },
    props: { product: defaultProduct },
  }));
}

interface Props {
  product: Product;
}

const { product } = Astro.props;

if (!product) {
  return Astro.redirect("/404");
}

const pageTitle = `${product.name} - THANH CONG PC`;
const pageDescription = truncateText(product.description, 160);
---

<Layout
  title={pageTitle}
  description={pageDescription}
  keywords={`${product.name}, gaming pc, ${product.specs.cpu.name}, ${product.specs.gpu.name}`}
>
  <div class="product-page">
    <!-- Back Button -->
    <div class="back-nav">
      <a href="/#showcase" class="back-btn">
        <Icon name="arrow-left" size={20} />
        <span>Back to Showcase</span>
      </a>
    </div>

    <!-- Product Hero -->
    <section class="product-hero">
      <div class="product-container">
        <div class="product-grid">
          <!-- Image Gallery -->
          <div class="product-gallery">
            <!-- Main Image Slider -->
            <div class="main-slider">
              <button
                class="main-slider-btn main-prev-btn"
                aria-label="Previous"
              >
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path
                    d="M15 18L9 12L15 6"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"></path>
                </svg>
              </button>
              <div class="main-slider-container">
                <div class="main-slider-track">
                  {
                    showcases.map((item: any, index: number) => (
                      <div class="main-slide" data-index={index}>
                        <img
                          src={item.image}
                          alt={`${item.title ?? item.name ?? "Image"} ${index + 1}`}
                        />
                      </div>
                    ))
                  }
                </div>
              </div>
              <button class="main-slider-btn main-next-btn" aria-label="Next">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path
                    d="M9 18L15 12L9 6"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"></path>
                </svg>
              </button>
              <div class="image-badge">{product.category}</div>
            </div>

            <!-- Thumbnail Slider (max 4 per view) -->
            <div class="thumbnail-slider">
              <button
                class="thumb-slider-btn thumb-prev-btn"
                aria-label="Previous thumbnails"
              >
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                  <path
                    d="M15 18L9 12L15 6"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"></path>
                </svg>
              </button>
              <div class="thumbnail-container">
                <div class="thumbnail-track">
                  {
                    showcases.map((item: any, index: number) => (
                      <img
                        src={item.image}
                        alt={`${item.title ?? item.name ?? "Image"} ${index + 1}`}
                        class={`thumbnail ${index === 0 ? "active" : ""}`}
                        data-index={index}
                      />
                    ))
                  }
                </div>
              </div>
              <button
                class="thumb-slider-btn thumb-next-btn"
                aria-label="Next thumbnails"
              >
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                  <path
                    d="M9 18L15 12L9 6"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"></path>
                </svg>
              </button>
            </div>
          </div>

          <!-- Product Info -->
          <div class="product-info">
            <div class="product-meta">
              <Badge variant="gold">{product.brand}</Badge>
              <Badge variant="success">{product.stock}</Badge>
            </div>

            <h1 class="product-name">{product.name}</h1>
            <p class="product-tagline">{product.tagline}</p>

            <StarRating
              rating={product.rating}
              showText
              reviews={product.reviews}
            />

            <div class="pricing-section">
              <div class="price-row">
                <div class="product-price">
                  ${
                    product.price.toLocaleString("en-US", {
                      minimumFractionDigits: 2,
                    })
                  }
                </div>
                {
                  product.originalPrice && (
                    <div class="original-price">
                      $
                      {product.originalPrice.toLocaleString("en-US", {
                        minimumFractionDigits: 2,
                      })}
                    </div>
                  )
                }
              </div>
              {
                product.discount && (
                  <div class="discount-badge">SAVE {product.discount}%</div>
                )
              }
            </div>

            <p class="product-description">{product.description}</p>

            <!-- Buy Buttons -->
            <div class="buy-section">
              <h3>Mua ngay t·∫°i:</h3>
              <div class="buy-links">
                {
                  product.buyLinks.map((link) => (
                    <a
                      href={link.url}
                      class="buy-btn"
                      target="_blank"
                      rel="noopener"
                    >
                      <span class="buy-icon">{link.icon}</span>
                      <span>{link.platform}</span>
                    </a>
                  ))
                }
              </div>
            </div>

            <!-- Features -->
            <div class="features-list">
              <h3>Key Features:</h3>
              <ul>
                {
                  product.features.map((feature) => (
                    <li>
                      <Icon name="check" size={20} stroke="#FFD700" />
                      <span>{feature}</span>
                    </li>
                  ))
                }
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Specifications -->
    <section class="specifications">
      <div class="product-container">
        <SectionHeader
          titleVN="SPECIFICATIONS"
          titleEN="Technical Specifications"
        />

        <div class="specs-grid">
          {
            Object.entries(product.specs).map(
              ([key, spec]: [string, ProductSpec]) => (
                <div class="spec-card">
                  <div class="spec-header">
                    <div class="spec-icon">
                      <svg
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                      >
                        <rect
                          x="4"
                          y="4"
                          width="16"
                          height="16"
                          stroke="#C8102E"
                          stroke-width="2"
                        />
                        <circle cx="12" cy="12" r="3" fill="#FFD700" />
                      </svg>
                    </div>
                    <h3>{key.toUpperCase()}</h3>
                  </div>
                  <p class="spec-name">{spec.name}</p>
                  <p class="spec-details">{spec.details}</p>
                </div>
              )
            )
          }
        </div>
      </div>
    </section>

    <!-- Related Products -->
    <section class="related-products">
      <div class="product-container">
        <SectionHeader titleVN="RELATED" titleEN="You May Also Like" />

        <div class="related-grid">
          {
            showcases.slice(0, 3).map((item) => (
              <a href={`/product/${item.id}`} class="related-card">
                <img src={item.image} alt={item.title} />
                <div class="related-info">
                  <h3>{item.title}</h3>
                  <p class="related-specs">{item.specs}</p>
                  <span class="view-link">View Details</span>
                </div>
              </a>
            ))
          }
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  @import '../../styles/product.css';
</style>

<script>
  // Main slider elements
  const mainTrack = document.querySelector(".main-slider-track") as HTMLElement;
  const mainPrevBtn = document.querySelector(".main-prev-btn");
  const mainNextBtn = document.querySelector(".main-next-btn");
  const mainSlides = document.querySelectorAll(".main-slide");

  // Thumbnail slider elements
  const thumbTrack = document.querySelector(".thumbnail-track") as HTMLElement;
  const thumbPrevBtn = document.querySelector(".thumb-prev-btn");
  const thumbNextBtn = document.querySelector(".thumb-next-btn");
  const thumbnails = document.querySelectorAll(".thumbnail");

  const totalImages = mainSlides.length;
  const thumbsPerView = 4;
  let currentIndex = 0;
  let currentThumbPage = 0;
  const totalThumbPages = Math.ceil(totalImages / thumbsPerView);

  // Go to specific main image
  function goToMainSlide(index: number) {
    if (index < 0) index = totalImages - 1;
    if (index >= totalImages) index = 0;

    currentIndex = index;
    mainTrack.style.transform = `translateX(-${currentIndex * 100}%)`;

    // Update active thumbnail
    thumbnails.forEach((thumb, i) => {
      thumb.classList.toggle("active", i === currentIndex);
    });

    // Auto scroll thumbnail slider to show active thumbnail
    const newThumbPage = Math.floor(currentIndex / thumbsPerView);
    if (newThumbPage !== currentThumbPage) {
      goToThumbPage(newThumbPage);
    }
  }

  // Thumbnail slider pagination
  function goToThumbPage(page: number) {
    if (page < 0) page = 0;
    if (page >= totalThumbPages) page = totalThumbPages - 1;

    currentThumbPage = page;
    const thumbWidth = 25; // 25% per thumbnail
    const gapOffset = currentThumbPage * thumbsPerView * 10; // gap: 10px
    const offset = currentThumbPage * thumbsPerView * thumbWidth;
    thumbTrack.style.transform = `translateX(calc(-${offset}% - ${gapOffset}px))`;
  }

  // Main slider navigation
  mainPrevBtn?.addEventListener("click", () => goToMainSlide(currentIndex - 1));
  mainNextBtn?.addEventListener("click", () => goToMainSlide(currentIndex + 1));

  // Thumbnail slider navigation
  thumbPrevBtn?.addEventListener("click", () =>
    goToThumbPage(currentThumbPage - 1)
  );
  thumbNextBtn?.addEventListener("click", () =>
    goToThumbPage(currentThumbPage + 1)
  );

  // Click thumbnail to select main image
  thumbnails.forEach((thumb, index) => {
    thumb.addEventListener("click", () => goToMainSlide(index));
  });

  // Keyboard navigation
  document.addEventListener("keydown", (e) => {
    if (e.key === "ArrowLeft") goToMainSlide(currentIndex - 1);
    if (e.key === "ArrowRight") goToMainSlide(currentIndex + 1);
  });

  // Buy button confirmation
  const buyBtns = document.querySelectorAll(".buy-btn");
  buyBtns.forEach((btn) => {
    btn.addEventListener("click", (e) => {
      e.preventDefault();
      const confirmed = confirm(
        "üéÅ Wow! You're rich! üí∞\n\nBefore you go shopping, how about gifting me a ‚≠ê on GitHub?\n\nIt's FREE and makes my day! ü•∫"
      );
      if (confirmed) {
        window.open("https://github.com/cong85010/landing-page-pc", "_blank");
      }
    });
  });
</script>
