---
// Arsenal Section Component
const products = [
  {
    name: 'WARRIOR',
    subtitle: 'Dành cho chiến binh gaming',
    badge: 'BEST SELLER',
    badgeType: 'default',
    price: '45.000.000₫',
    specs: [
      { label: 'GPU', value: 'RTX 4070 Ti' },
      { label: 'CPU', value: 'i7-14700K' },
      { label: 'RAM', value: '32GB DDR5' }
    ],
    theme: 'warrior',
    image: '/showcase/pc1.png'
  },
  {
    name: 'TITAN',
    subtitle: 'Sức mạnh tối thượng',
    badge: 'FLAGSHIP',
    badgeType: 'champion',
    price: '85.000.000₫',
    specs: [
      { label: 'GPU', value: 'RTX 4090' },
      { label: 'CPU', value: 'i9-14900K' },
      { label: 'RAM', value: '64GB DDR5' }
    ],
    theme: 'titan',
    image: '/showcase/pc3.png'
  },
  {
    name: 'CREATOR',
    subtitle: 'Cho nhà sáng tạo nội dung',
    badge: 'PRO SERIES',
    badgeType: 'default',
    price: '72.000.000₫',
    specs: [
      { label: 'GPU', value: 'RTX 4080' },
      { label: 'CPU', value: 'AMD 7950X' },
      { label: 'RAM', value: '128GB DDR5' }
    ],
    theme: 'creator',
    image: '/showcase/pc6.png'
  }
];
---

<section class="arsenal" id="arsenal">
  <div class="section-number">02</div>
  <h2 class="section-title">
    <span class="title-vn">VŨ KHÍ</span>
    <span class="title-en">Choose Your Weapon</span>
  </h2>

  <div class="arsenal-grid">
    {products.map((product) => (
      <div class={`arsenal-card ${product.theme}`}>
        <div class={`card-badge ${product.badgeType === 'champion' ? 'champion' : ''}`}>
          {product.badge}
        </div>
        <div class="card-visual">
          <img src={product.image} alt={product.name} class="product-image"  />
          <div class="visual-glow"></div>
        </div>
        <div class="card-content">
          <h3 class="card-title">{product.name}</h3>
          <p class="card-subtitle">{product.subtitle}</p>
          <div class="card-specs">
            {product.specs.map((spec) => (
              <div class="spec-item">
                <span class="spec-label">{spec.label}</span>
                <span class="spec-value">{spec.value}</span>
              </div>
            ))}
          </div>
          <div class="card-price">
            <span class="price-amount">{product.price}</span>
          </div>
          <a href={`/customizer?preset=${product.theme}`} class="card-btn">
            <span>CUSTOMIZER</span>
            <span class="btn-arrow">→</span>
          </a>
        </div>
      </div>
    ))}
  </div>
</section>

<script>
  // Add hover effects and interactions
  document.querySelectorAll('.arsenal-card').forEach(card => {
    const visualBox = card.querySelector('.visual-box');

    card.addEventListener('mouseenter', () => {
      card.style.transform = 'translateY(-10px)';
    });

    card.addEventListener('mouseleave', () => {
      card.style.transform = 'translateY(0)';
    });

    card.addEventListener('mousemove', (e) => {
      if (!visualBox) return;
      const rect = card.getBoundingClientRect();
      const x = ((e.clientX - rect.left) / rect.width - 0.5) * 20;
      const y = ((e.clientY - rect.top) / rect.height - 0.5) * 20;
      visualBox.style.transform = `rotateY(${x}deg) rotateX(${-y}deg)`;
    });
  });
</script>
