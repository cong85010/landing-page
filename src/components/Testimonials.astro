// Testimonials Component
const testimonials = [
  {
    rating: 5,
    text: "Build quality đỉnh cao, cable management hoàn hảo. Đây là chiếc PC đẹp nhất tôi từng sở hữu.",
    author: "Minh Tuấn",
    role: "Pro Gamer"
  },
  {
    rating: 5,
    text: "Render 4K video nhanh gấp 3 lần. Thành Công Gear hiểu nhu cầu creator.",
    author: "Phương Anh",
    role: "Video Editor"
  },
  {
    rating: 5,
    text: "Overclock ổn định, nhiệt độ mát mẻ. Tuyệt vời cho streaming.",
    author: "Đức Anh",
    role: "Streamer"
