---
// Brand Partners Component
const partners = [
  { name: 'AMD', logo: '/brands/amd.svg' },
  { name: 'Intel', logo: '/brands/intel.png' },
  { name: 'ASUS', logo: '/brands/asus.webp' },
  { name: 'Corsair', logo: '/brands/cor.webp' },
  { name: 'Acer', logo: '/brands/acer.webp' },
  { name: 'Alienware', logo: '/brands/alient.jpg' },
  { name: 'ASRock', logo: '/brands/asrok.jpg' },
  { name: 'Lenovo', logo: '/brands/lenovo.webp' },
  { name: 'Logitech', logo: '/brands/logi.webp' },
  { name: 'Razer', logo: '/brands/rezer.webp' }
];
---

<section class="partners">
  <div class="partners-container">
    <div class="partners-header">
      <h2 class="partners-title">
        <span class="title-vn">ĐỐI TÁC</span>
        <span class="title-en">Premium Partners</span>
      </h2>
      <p class="partners-subtitle">
        Chúng tôi hợp tác với các thương hiệu hàng đầu thế giới
      </p>
    </div>

    <div class="partners-wrapper">
      <div class="partners-track">
        {/* Render 3 sets for seamless infinite loop */}
        {[...partners, ...partners, ...partners].map((partner, index) => (
          <div class="partner-card" key={index}>
            <img src={partner.logo} alt={partner.name} class="partner-logo" />
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .partners {
    padding: var(--section-padding) 5%;
    background: linear-gradient(180deg, rgba(10, 10, 10, 0.5), rgba(26, 26, 26, 0.8));
    position: relative;
    overflow: hidden;
  }

  .partners-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .partners-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .partners-title {
    display: flex;
    flex-direction: column;
    gap: 10px;
    align-items: center;
    margin-bottom: 20px;
  }

  .title-vn {
    font-family: var(--font-display);
    font-size: clamp(40px, 8vw, 60px);
    font-weight: 700;
    color: var(--white);
    letter-spacing: -1px;
  }

  .title-en {
    font-family: var(--font-mono);
    font-size: clamp(14px, 2vw, 16px);
    color: var(--gold);
    letter-spacing: 4px;
    opacity: 0.8;
  }

  .partners-subtitle {
    font-size: clamp(14px, 2vw, 18px);
    color: var(--silver);
    font-family: var(--font-body);
  }

  .partners-wrapper {
    width: 100%;
    overflow: hidden;
    position: relative;
  }

  /* Fade edges for seamless effect */
  .partners-wrapper::before,
  .partners-wrapper::after {
    content: '';
    position: absolute;
    top: 0;
    width: 200px;
    height: 100%;
    z-index: 10;
    pointer-events: none;
  }

  .partners-wrapper::before {
    left: 0;
    background: linear-gradient(90deg, rgba(26, 26, 26, 0.8), transparent);
  }

  .partners-wrapper::after {
    right: 0;
    background: linear-gradient(-90deg, rgba(26, 26, 26, 0.8), transparent);
  }

  .partners-track {
    display: flex;
    gap: 60px;
    animation: scrollPartners 35s linear infinite;
    width: max-content;
    align-items: center;
  }

  .partners-track:hover {
    animation-play-state: paused;
  }

  @keyframes scrollPartners {
    0% {
      transform: translateX(calc(-100% / 3));
    }
    100% {
      transform: translateX(0);
    }
  }

  .partner-card {
    min-width: 200px;
    max-width: 200px;
    height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    background: rgba(42, 42, 42, 0.5);
    border: 1px solid var(--steel);
    transition: var(--transition);
    flex-shrink: 0;
  }

  .partner-card:hover {
    background: rgba(42, 42, 42, 0.8);
    border-color: var(--red-primary);
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(200, 16, 46, 0.2);
  }

  .partner-logo {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: grayscale(100%) brightness(0.8);
    transition: var(--transition);
    border-radius: 12px;
    overflow: hidden;
  }

  .partner-card:hover .partner-logo {
    filter: grayscale(0%) brightness(1);
  }

  @media (max-width: 768px) {
    .partner-card {
      min-width: 150px;
      max-width: 150px;
      height: 100px;
    }

    .partners-track {
      gap: 40px;
    }
  }
</style>
