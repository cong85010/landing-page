<svg width="800" height="600" viewBox="0 0 800 600" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Red Dragon Theme -->
  <rect width="800" height="600" fill="#1A1A1A"/>

  <!-- Gradient background -->
  <defs>
    <radialGradient id="redGlow" cx="50%" cy="50%">
      <stop offset="0%" style="stop-color:#C8102E;stop-opacity:0.3" />
      <stop offset="100%" style="stop-color:#0A0A0A;stop-opacity:1" />
    </radialGradient>
  </defs>
  <rect width="800" height="600" fill="url(#redGlow)"/>

  <!-- PC Case -->
  <rect x="250" y="100" width="300" height="400" fill="#0A0A0A" stroke="#C8102E" stroke-width="4"/>
  <rect x="260" y="120" width="280" height="360" fill="url(#redGlow)" opacity="0.2"/>

  <!-- GPU -->
  <rect x="280" y="350" width="240" height="70" fill="#2A2A2A" stroke="#C8102E" stroke-width="3"/>
  <text x="400" y="390" font-family="monospace" font-size="18" fill="#C8102E" text-anchor="middle" font-weight="bold">RTX 4090</text>

  <!-- CPU Block with RGB -->
  <circle cx="400" cy="220" r="60" fill="#2A2A2A" stroke="#FF0000" stroke-width="3"/>
  <circle cx="400" cy="220" r="50" fill="url(#redGlow)"/>
  <text x="400" y="230" font-family="monospace" font-size="16" fill="#FFD700" text-anchor="middle" font-weight="bold">i9-14900K</text>

  <!-- RAM Sticks - Red -->
  <rect x="300" y="280" width="80" height="20" fill="#C8102E" opacity="0.8"/>
  <rect x="390" y="280" width="80" height="20" fill="#C8102E" opacity="0.8"/>

  <!-- RGB Fans -->
  <circle cx="350" cy="450" r="35" fill="none" stroke="#FF0000" stroke-width="3"/>
  <circle cx="450" cy="450" r="35" fill="none" stroke="#FF0000" stroke-width="3"/>

  <!-- Title -->
  <text x="400" y="550" font-family="Arial, sans-serif" font-size="32" fill="#C8102E" text-anchor="middle" font-weight="bold">THE RED DRAGON</text>
</svg>
